{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "preferences": {
      "type": "object",
      "properties": {
        "notifications": {
          "type": "object",
          "properties": {
            "email": {
              "type": "boolean"
            },
            "sms": {
              "type": "boolean"
            }
          },
          "required": [
            "email",
            "sms"
          ]
        },
        "theme": {
          "type": "string"
        }
      },
      "required": [
        "notifications",
        "theme"
      ]
    },
    "history": {
      "type": "object",
      "properties": {
        "logins": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string"
              },
              "ip": {
                "type": "string"
              }
            },
            "required": [
              "timestamp",
              "ip"
            ]
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "details": {
                    "type": "object",
                    "properties": {
                      "item_id": {
                        "type": "string"
                      },
                      "amount": {
                        "type": "number"
                      },
                      "currency": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "item_id",
                      "amount",
                      "currency"
                    ]
                  }
                },
                "required": [
                  "type",
                  "details"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "details": {
                    "type": "object",
                    "properties": {
                      "ticket_id": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "ticket_id",
                      "status"
                    ]
                  }
                },
                "required": [
                  "type",
                  "details"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "logins",
        "actions"
      ]
    },
    "banned": {
      "type": "boolean"
    }
  },
  "required": [
    "user_id",
    "username",
    "preferences",
    "history",
    "banned"
  ]
}